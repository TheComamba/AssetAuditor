<form class="flexcol" autocomplete="off">
    <section>
        <header>
            <h1>{{title}}</h1>
            <label>
                <input type="checkbox" id="toggle-invalid" {{#if showInvalidOnly}}checked{{/if}} />
                {{localize "asset_auditor.asset-filepaths-app.invalidOnly"}}
            </label>
        </header>
    </section>

    <section>
        <div>
            {{#each assets as |group|}}
            <h2>{{group.type}}</h2>
            {{#each group.assets}}
            <div style="{{#unless isValid}}color: red;{{/unless}}">
                <i class="fa fa-{{icon}}"></i>
                <span>{{name}}</span>
                <input type="text" value="{{path}}" />
            </div>
            {{/each}}
            {{/each}}
        </div>
    </section>
</form>